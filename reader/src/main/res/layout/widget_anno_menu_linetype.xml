<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_fill"
        style="@style/AnnotationMenuLineType"
        android:src="@drawable/anno_menu_fill_line" />

    <android.widget.Space
        android:layout_width="@dimen/anno_menu_line_space"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_normalline"
        style="@style/AnnotationMenuLineType"
        android:src="@drawable/anno_menu_normal_line" />

    <android.widget.Space
        android:layout_width="@dimen/anno_menu_line_space"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/btn_waveline"
        style="@style/AnnotationMenuLineType"
        android:src="@drawable/anno_menu_wave_line" />
</LinearLayout>